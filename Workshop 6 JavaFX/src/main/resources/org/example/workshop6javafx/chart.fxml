        <xAxis>
          <CategoryAxis fx:id="lcCategoryAxis" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="lcNumberAxis" side="LEFT" />
        </yAxis>
      </LineChart>
      <ToggleButtonGroup fx:id="tbgCharts" layoutX="445.0" layoutY="132.0" prefWidth="131.0" rotate="90.0" selectionType="SINGLE">
          <toggles>
              <ToggleButton>
                  <graphic>
                      <Icon fx:id="tbBar" content="FORMAT_ALIGN_LEFT" prefHeight="110.0" prefWidth="110.0">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Icon>
                  </graphic>
              </ToggleButton>
              <ToggleButton selected="true">
                  <graphic>
                      <Icon fx:id="tbPie" content="FORMAT_ALIGN_CENTER" prefHeight="110.0" prefWidth="110.0">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Icon>
                  </graphic>
              </ToggleButton>
              <ToggleButton>
                  <graphic>
                      <Icon fx:id="tbLine" content="FORMAT_ALIGN_RIGHT" prefHeight="110.0" prefWidth="110.0">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Icon>
                  </graphic>
              </ToggleButton>
          </toggles>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </ToggleButtonGroup>
