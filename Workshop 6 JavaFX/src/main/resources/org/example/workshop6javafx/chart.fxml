      <StackedBarChart fx:id="sbcBarChart" layoutX="3.0">
        <xAxis>
          <CategoryAxis fx:id="sbcCategoryAxis" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="sbcNumberAxis" side="LEFT" />
        </yAxis>
      </StackedBarChart>
      <PieChart fx:id="pcPieChart" layoutX="3.0" />
